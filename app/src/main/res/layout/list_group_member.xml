<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="5dp"
    app:cardElevation="5dp"
    android:layout_margin="10dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:paddingStart="5dp"
        android:paddingEnd="10dp"
        android:paddingTop="5dp"
        android:paddingBottom="16dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/ivProfilePicture"
            android:layout_alignParentEnd="true"
            android:layout_width="75dp"
            android:layout_height="75dp"
            tools:src="@drawable/rvs_flag"
            app:civ_border_color="#000"
            app:civ_border_width="1dp" />

        <TextView
            android:id="@+id/tvName"
            tools:text="Amit Vijaranyia"
            android:textStyle="bold|italic"
            android:maxLines="1"
            android:ellipsize="end"
            android:textColor="#006600"
            android:layout_alignTop="@id/ivProfilePicture"
            android:paddingStart="5dp"
            android:paddingEnd="0dp"
            style="@style/TextAppearance.AppCompat.Headline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tvMemberSince"
            style="@style/TextAppearance.AppCompat.Subhead"
            android:text="@string/string_member_since"
            android:textSize="14sp"
            android:paddingTop="5dp"
            android:layout_alignStart="@id/tvName"
            android:paddingStart="5dp"
            android:paddingEnd="0dp"
            android:layout_below="@id/tvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tvMemberSinceValue"
            style="@style/TextAppearance.AppCompat.Subhead"
            tools:text="31-Jan-2020"
            android:textSize="14sp"
            android:paddingTop="5dp"
            android:layout_toEndOf="@id/tvMemberSince"
            android:paddingStart="5dp"
            android:paddingEnd="0dp"
            android:layout_below="@id/tvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tvCollege"
            style="@style/TextAppearance.AppCompat.Subhead"
            android:text="@string/string_college"
            android:textSize="14sp"
            android:paddingTop="5dp"
            android:layout_alignStart="@id/tvName"
            android:paddingStart="5dp"
            android:paddingEnd="0dp"
            android:layout_below="@id/tvMemberSince"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tvCollegeValue"
            style="@style/TextAppearance.AppCompat.Subhead"
            tools:text="Delhi Technological University"
            android:textSize="14sp"
            android:paddingTop="5dp"
            android:paddingStart="5dp"
            android:paddingEnd="0dp"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_toEndOf="@id/tvCollege"
            android:layout_below="@id/tvMemberSince"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </RelativeLayout>
</androidx.cardview.widget.CardView>